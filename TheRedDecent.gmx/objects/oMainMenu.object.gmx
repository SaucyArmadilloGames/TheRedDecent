          <argument>
            <kind>1</kind>
            <string>///Step Menu

if(!optionsOpen)
{
    if(keyboard_check_pressed(ord('W')) || keyboard_check_pressed(vk_up))
    {
        if(currentSelection != 0)
        {
            currentSelection--;
            audio_play_sound(sSelectionChange, 1, false);
        }
    }
    else if(keyboard_check_pressed(ord('S')) || keyboard_check_pressed(vk_down))
    {
        if(currentSelection != 3)
        {
            currentSelection++;
            audio_play_sound(sSelectionChange, 1, false);
        }
    }
    if(keyboard_check_pressed(vk_enter))
    {
        if(currentSelection == 0)
        {
            audio_stop_all();
            audio_play_sound(mSectionA, 1, true);
            room_goto_next();
        }
        else if(currentSelection == 2)
        {
                instance_create(0, 0, oOptionsPane);
                optionsTransition = true;
                optionsOpen = true;
        }
        else if(currentSelection == 3)
        {
                game_end();
        }
    }
}

//Menu Draw Logic
if(titleOpacity &lt;= 1)
{
    titleOpacity += 0.005;
}
</string>
