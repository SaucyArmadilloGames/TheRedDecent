            <string>///Step Menu

if(!optionsOpen)
{
    if(keyboard_check_pressed(keyUp))
    {
        if(currentSelection != 0)
        {
            currentSelection--;
        }
    }
    else if(keyboard_check_pressed(keyDown))
    {
        if(currentSelection != 3)
        {
            currentSelection++;
        }
    }
    if(keyboard_check_pressed(vk_enter))
    {
        if(currentSelection == 0)
        {
            audio_stop_all();
            audio_play_sound(mSectionA, 1, true);
            room_goto_next();
        }
        else if(currentSelection == 2)
        {
                instance_create(400, 25, oOptionsPane);
                optionsOpen = true;
        }
        else if(currentSelection == 3)
        {
                game_end();
        }
    }
}
